# Google API Key for Gemini model
GOOGLE_API_KEY=your_api_key_here

# Merchant Configuration
MERCHANT_WALLET_ADDRESS=your-merchant-wallet-address
PAYMENT_NETWORK=base-sepolia
USDC_CONTRACT=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Facilitator Configuration
# Options: 'mock' (testing), 'real' (blockchain), 'http' (external service)
FACILITATOR_MODE=mock

# Required for FACILITATOR_MODE=real
# IMPORTANT: This wallet will EXECUTE transfers and PAY GAS. Keep secure!
MERCHANT_PRIVATE_KEY=0xYourMerchantPrivateKeyHere
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Required for FACILITATOR_MODE=http
FACILITATOR_URL=https://x402.org/facilitator
FACILITATOR_API_KEY=  # Optional: API key for facilitator authentication

# x402 Protocol Debug Logging
# Set to 'true' or '1' to enable detailed x402 protocol logs
# Set to 'false' or omit to disable (errors will still be shown)
X402_DEBUG=false

# AML (Anti-Money Laundering) Configuration
# Enable AML compliance checks on payment verification
AML_ENABLED=true

# Risk score threshold (0-100). Payments with score >= threshold are rejected
# Recommended: 70 (HIGH risk and above rejected)
AML_RISK_THRESHOLD=70

# Flag high-risk payments for manual review instead of auto-rejecting
# If true, HIGH risk payments are allowed but flagged
# CRITICAL and sanctioned addresses are always rejected
AML_REQUIRE_MANUAL_REVIEW=true

# Chainalysis Oracle Integration (Real-time sanctions screening)
# Use Chainalysis on-chain oracle for up-to-date sanctions list
# Default: true (automatically queries smart contract)
AML_USE_ORACLE=true

# Optional: Custom Chainalysis Oracle address
# Default auto-detects based on network:
#   - Ethereum: 0x40C57923924B5c5c5455c48D93317139ADDaC8fb
#   - Base: 0x40C57923924B5c5c5455c48D93317139ADDaC8fb
#   - Base Sepolia: 0x40C57923924B5c5c5455c48D93317139ADDaC8fb
# AML_ORACLE_ADDRESS=0x40C57923924B5c5c5455c48D93317139ADDaC8fb

# Optional: Etherscan API key for enhanced on-chain analysis
# Free tier: https://etherscan.io/apis
# ETHERSCAN_API_KEY=your_etherscan_api_key_here
